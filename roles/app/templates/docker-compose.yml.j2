version: '2'

services:
  blog-server:
    build: ./provisioning/development
    image: laravel-blog
    links:
      - mysql
    volumes:
      - ./:/application
      - /var/www/logs:/application/storage/logs
      - /var/www/vendor:/application/vendor
      - /var/www/uploads:/application/storage/app

  queue-server:
    build: .
    image: laravel-blog
    command: php artisan queue:work
    links:
      - mysql
    volumes:
      - ./:/application

  mysql:
    image: mysql
    environment:
      - MYSQL_ROOT_PASSWORD={{ db_password }}
      - MYSQL_DATABASE={{ db_database }}
    volumes:
      - /var/lib/mysql:/var/lib/mysql

  nginx:
    image: nginx
    ports:
      - '80:80'
    volumes:
      - ./provisioning/development/nginx.conf:/etc/nginx/conf.d/default.conf
      - ./:/application
    links:
      - blog-server
